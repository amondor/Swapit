                    <li class="nav-item">
                        <a class="nav-link" href="{{path("registration")}}">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path("login")}}">Connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{path('userowngameslists')}}">Ownlist</a>
